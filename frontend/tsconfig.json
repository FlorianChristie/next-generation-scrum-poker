{
  "compilerOptions": {
    "baseUrl": ".",
    "jsx": "react",
    "module": "ESNext",
    "moduleResolution": "Node",
    "noImplicitAny": false,
    "paths": {
      "/web_modules/*.js": ["node_modules/@types/*", "node_modules/*", "web_modules/*.js"]
    },
    "sourceMap": true,
    "strict": true,
    "target": "ESNext"
  },
  "include": ["src/**/*"],
  "exclude": ["src/**/*.test.ts"]
}
